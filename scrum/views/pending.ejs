<html>
 <head>
 <meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Point Submit</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<style>
    .bs-example{
        margin: 20px;        
    }
</style>
 </head>
 <body>
 <div class="bs-example">
   <form action="point" method="POST">
	 <% resul.forEach(function(resul){%>
	    

		 <div class="form-group row">
            <label for="inputID" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="inputID" value="<%= resul.id %>" name="id">
            </div>
        </div>

		<div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="inputTitle" value="<%= resul.title %>" name="title">
            </div>
        </div>

		<div class="form-group row">
            <label for="inputDis" class="col-sm-2 col-form-label">Discription</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="inputDis" value="<%= resul.discription %>" name="discription">
            </div>
        </div>
		<div  class="form-group row">
		  <label for="inputPoin" class="col-sm-2 col-form-label">Points</label>
		  <div class="col-sm-10">
		   <input type="radio" name="point" value="0">0
		       <input type="radio" name="point" value="1">1
			   <input type="radio" name="point" value="2">2
			   <input type="radio" name="point" value="3">3
			   <input type="radio" name="point" value="5">5
			   <input type="radio" name="point" value="8">8
			   <input type="radio" name="point" value="13">13
			   <input type="radio" name="point" value="20">20
			   <input type="radio" name="point" value="40">40
			   <input type="radio" name="point" value="100">100
			   </div>
		<%}) %>
		</div>

		<div class="form-group row">
            <label for="inputcom" class="col-sm-2 col-form-label">Comments</label>
            <div class="col-sm-10">
                <input type="text"   id="inputcom" value="" name="comment">
            </div>
        </div>
		
		 <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
	 </div>
   </form>
   </div>
 </body>
</html>